#!/bin/bash
# test-all-lua - Run a Lua script with all available Lua versions
# This is a backwards-compatible wrapper around 'vl all lua'

set -e

if [ $# -eq 0 ]; then
    echo "Usage: test-all-lua <script.lua> [args...]"
    echo "Runs the specified Lua script with all available Lua versions"
    echo ""
    echo "Note: This command is equivalent to 'vl all lua <script.lua> [args...]'"
    echo "Consider using 'vl' for more flexibility."
    exit 1
fi

# Call vl with all versions
exec vl all lua "$@"

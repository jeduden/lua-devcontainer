#!/bin/bash
# vl - Run lua or luarocks commands with specified Lua versions
# Usage: vl <versions> <lua|luarocks> [args...]
# Examples:
#   vl all lua script.lua
#   vl 5.1,5.4 luarocks install luacheck
#   vl 5.3 lua -e 'print(_VERSION)'

set -e

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

if [ $# -lt 2 ]; then
    echo "Usage: vl <versions> <lua|luarocks> [args...]"
    echo ""
    echo "Arguments:"
    echo "  <versions>  Comma-separated Lua versions (5.1,5.2,5.3,5.4,jit) or 'all'"
    echo "  <command>   Either 'lua' or 'luarocks'"
    echo "  [args...]   Arguments to pass to the command"
    echo ""
    echo "Examples:"
    echo "  vl all lua test.lua              # Run script with all Lua versions"
    echo "  vl 5.1,5.4 luarocks install pkg  # Install package for Lua 5.1 and 5.4"
    echo "  vl 5.3 lua -e 'print(_VERSION)'  # Run inline Lua code with 5.3"
    echo "  vl jit lua script.lua            # Run with LuaJIT"
    exit 1
fi

VERSIONS_ARG="$1"
COMMAND="$2"
shift 2
ARGS="$@"

# Validate command
if [ "$COMMAND" != "lua" ] && [ "$COMMAND" != "luarocks" ]; then
    echo "Error: Command must be 'lua' or 'luarocks', got '$COMMAND'"
    exit 1
fi

# Parse versions
if [ "$VERSIONS_ARG" = "all" ]; then
    VERSIONS=("5.1" "5.2" "5.3" "5.4" "jit")
else
    IFS=',' read -ra VERSIONS <<< "$VERSIONS_ARG"
fi

FAILED=0
SUCCESS=0
TOTAL=${#VERSIONS[@]}

if [ $TOTAL -gt 1 ]; then
    echo "========================================="
    echo "Running: $COMMAND $ARGS"
    echo "Versions: ${VERSIONS[*]}"
    echo "========================================="
    echo ""
fi

for VERSION in "${VERSIONS[@]}"; do
    # Map version to executable name
    if [ "$VERSION" = "jit" ]; then
        if [ "$COMMAND" = "lua" ]; then
            EXECUTABLE="luajit"
        else
            echo -e "${YELLOW}⚠ LuaJIT doesn't have a separate luarocks, skipping${NC}"
            continue
        fi
    else
        if [ "$COMMAND" = "lua" ]; then
            EXECUTABLE="lua${VERSION}"
        else
            EXECUTABLE="luarocks-${VERSION}"
        fi
    fi

    if [ $TOTAL -gt 1 ]; then
        echo "--- $EXECUTABLE ---"
    fi

    if $EXECUTABLE $ARGS; then
        if [ $TOTAL -gt 1 ]; then
            echo -e "${GREEN}✓ $EXECUTABLE: SUCCESS${NC}"
        fi
        SUCCESS=$((SUCCESS + 1))
    else
        EXIT_CODE=$?
        if [ $TOTAL -gt 1 ]; then
            echo -e "${RED}✗ $EXECUTABLE: FAILED (exit code: $EXIT_CODE)${NC}"
        fi
        FAILED=$((FAILED + 1))
    fi

    if [ $TOTAL -gt 1 ]; then
        echo ""
    fi
done

if [ $TOTAL -gt 1 ]; then
    echo "========================================="
    if [ $FAILED -eq 0 ]; then
        echo -e "${GREEN}Results: $SUCCESS/$TOTAL passed${NC}"
    else
        echo -e "${RED}Results: $SUCCESS passed, $FAILED failed${NC}"
    fi
    echo "========================================="
fi

if [ $FAILED -ne 0 ]; then
    exit 1
fi
